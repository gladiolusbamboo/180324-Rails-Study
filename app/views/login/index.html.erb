<p style="color: Red"><%= @error %></p>
<%= form_tag action: :auth do %>
  <div class="field">
    <%= label_tag :listenername, 'ユーザー名' %><br />
    <%= text_field_tag :listenername, '', size: 20 %>
  </div>
  <div class="field">
    <%= label_tag :password, 'パスワード' %><br />
    <%= password_field_tag :password, '', size: 20 %>
  </div>
  <%# フラッシュを使って参照元のページを共有している %>
  <%= hidden_field_tag :referer, flash[:referer] %>
  <%= submit_tag 'ログイン' %>
<% end %>